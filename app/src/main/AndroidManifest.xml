            android:label="@string/second_title"
            android:theme="@style/SecondAppTheme" />
        <activity android:name=".views.ui.DepositActivity"  android:label="@string/second_title"
            android:theme="@style/SecondAppTheme"/>
        <activity android:name=".views.ui.DepositConfirmationActivity"  android:label="@string/second_title"
            android:theme="@style/SecondAppTheme" />
        <activity android:name=".views.ui.withdraw.ConfirmationWithdrawActivity"  android:label="@string/second_title"
            android:theme="@style/SecondAppTheme" />
        <activity android:name=".views.ui.withdraw.WithdrawActivity"  android:label="@string/second_title"
            android:theme="@style/SecondAppTheme"></activity>
    </application>

</manifest>