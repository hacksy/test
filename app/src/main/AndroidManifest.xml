        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ui.login.LoginActivity"
            android:label="@string/app_name" />
        <activity android:name=".views.ui.fingerprint.FingerprintActivity" />
        <activity android:name=".views.ui.main.MainActivity" />
        <activity android:name=".views.ui.registerUser.RegisterUserDataActivity" />
        <activity android:name=".views.ui.registerUser.RegisterUserFingerprintActivity" />
        <activity android:name=".views.ui.registerUser.RegisterUserConfirmationActivity" />
